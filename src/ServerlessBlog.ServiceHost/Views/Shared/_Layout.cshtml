@inject IOptions<BlogSettings> BlogSettings

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - @BlogSettings.Value.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet" type="text/css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.0.0/normalize.min.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.1.0/styles/default.min.css">
    <link href="~/css/site.css" rel="stylesheet" type="text/css"/>
    @if (!string.IsNullOrWhiteSpace(BlogSettings.Value.GoogleAnalyticsTrackingId))
    {
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

          ga('create', '@BlogSettings.Value.GoogleAnalyticsTrackingId', 'auto');
          ga('send', 'pageview');
    </script>
    }
</head>
<body>
<header>
    <div class="container">
        <nav>
            <div class="name">
                <a asp-controller="Blog" asp-action="Posts">@BlogSettings.Value.Title</a>
            </div>
            <div class="links">
                @if (!string.IsNullOrWhiteSpace(BlogSettings.Value.GithubProfileUrl))
                {
                    <a class="github" target="_blank" href="@BlogSettings.Value.GithubProfileUrl"><span>github</span></a>
                }
                @if (!string.IsNullOrWhiteSpace(BlogSettings.Value.TwitterProfileUrl))
                {
                    <a class="twitter" target="_blank" href="@BlogSettings.Value.TwitterProfileUrl"><span>twitter</span></a>
                }
                @if (!string.IsNullOrWhiteSpace(BlogSettings.Value.LinkedInProfileUrl))
                {
                    <a class="linkedin" target="_blank" href="@BlogSettings.Value.LinkedInProfileUrl"><span>linkedin</span></a>
                }
            </div>
        </nav>
    </div>
</header>
<main>
    <div class="container">
        @RenderBody()
    </div>
</main>
<footer>
    <div class="container">
        <p>&copy; @DateTime.Now.Year <a asp-controller="Blog" asp-action="Posts">@BlogSettings.Value.Title</a></p>
    </div>
</footer>

<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.1.0/highlight.min.js"></script>
<script>hljs.initHighlightingOnLoad();</script>
</body>
</html>
